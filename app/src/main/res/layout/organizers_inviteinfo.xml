<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Event Name -->
    <TextView
        android:id="@+id/eventnameInfo_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENT NAME"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:textColor="@color/black" />

    <!-- QR Code -->
    <ImageView
        android:id="@+id/eventInfoImage_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:contentDescription="QR Code Image"
        android:scaleType="fitCenter" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Close Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginTop="16dp"
            android:textSize="10sp"
            android:backgroundTint="#8BC34A"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"/>

        <!-- Waitlist Button -->
        <Button
            android:id="@+id/button_ViewWaitlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waitlist"
            android:layout_marginTop="16dp"
            android:textSize="10sp"
            android:backgroundTint="#8BC34A"
            android:textColor="@color/black"
            android:layout_marginRight="5dp">

        </Button>

        <!-- Chosen Users Button -->
        <Button
            android:id="@+id/button_invited_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chosen Users"
            android:textSize="10sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8BC34A"
            android:textColor="@color/black">

        </Button>

    </LinearLayout>

</LinearLayout>
